#!/bin/bash

# a       b       c       d
# |.......|.......|.......|.......|.......
# |.....|.....|.....|.....|.....|.....|.....|.....
# Y     W     J     j     Z     A     =     =
# 
# .       a       b       c       d
# |xxxxxxx|.......|.......|.......|.......
# |xxxxx|xxxxx|.....|.....|.....|.....|.....|.....
# L     m     F     i     Y     2     Q     =
# 
# .       .       a       b       c       d
# |xxxxxxx|xxxxxxx|.......|.......|.......|.......
# |xxxxx|xxxxx|xxxxx|.....|.....|.....|.....|.....
# L     i     5     h     Y     m     N     k
# 
# .       .       .       a       b       c       d
# |xxxxxxx|xxxxxxx|xxxxxxx|.......|.......|.......|.......
# |xxxxx|xxxxx|xxxxx|xxxxx|.....|.....|.....|.....|.....|.....|.....|.....
# L     i     4     u     Y     W     J     j     Z     A     =     =

# a       b       c
# |.......|.......|.......
# |.....|.....|.....|.....
# Y     W     J     j
# 
# a       b       c       d
# |.......|.......|.......|.......|xxxxxxx|xxxxxxx
# |.....|.....|.....|.....|.....|xxxxx|xxxxx|xxxxx
# Y     W     J     j     Z     A     =     =
# 
# a       b       c       d       e
# |.......|.......|.......|.......|.......|xxxxxxx
# |.....|.....|.....|.....|.....|.....|xxxxx|xxxxx
# Y     W     J     j     Z     G     U     =
# 
# a       b       c       d       e       f
# |.......|.......|.......|.......|.......|.......
# |.....|.....|.....|.....|.....|.....|.....|.....
# Y     W     J     j     Z     G     V     m

{
	echo -n "$1" | base64 
	echo -n ".$1" | base64 | cut -c3-
	echo -n "..$1" | base64  | cut -c4-
} | sed -re 's/.==?$//'
